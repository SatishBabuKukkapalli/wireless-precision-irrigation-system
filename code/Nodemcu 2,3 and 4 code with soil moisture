#include <ESP8266WiFi.h> 
#include <ESP8266HTTPClient.h> #define SOIL_PIN A0 const char* ssid = "enter ssid name"; const char* password = "enter password"; const char* RPI_SERVER = "192.168.184.205"; const int RPI_PORT = 5000; void setup() { 
  Serial.begin(115200); 
  WiFi.begin(ssid, password);   while (WiFi.status() != WL_CONNECTED) delay(500); 
} void loop() {   if (WiFi.status() == WL_CONNECTED) {     int soil = analogRead(SOIL_PIN); 
    WiFiClient client; 
    HTTPClient http; 
    String url = "http://" + String(RPI_SERVER) + ":" + String(RPI_PORT) + "/upload";     http.begin(client, url);     http.addHeader("Content-Type", "application/json");     String payload = "{\"id\":4,\"soil\":" + String(soil) + "}";     int httpCode = http.POST(payload); 
    String response = http.getString(); 
    Serial.println("Status: " + String(httpCode) + " | " + response);     http.end(); 
  } 
  delay(60000);  // 60 seconds } 
